{
  "name": "countdown",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.2",
    "gh-pages": "^0.12.0",
    "onchange": "^3.2.0",
    "parallelshell": "^2.0.0"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "./node_modules/.bin/babel app.js -o app.compiled.js && sh utilities.sh -b",
    "deploy": "npm run build && ./node_modules/.bin/gh-pages -d dist",
    "watch": "onchange '{index,style,app}.{html,css,js}' -- npm run build",
    "start": "npm run build && ./node_modules/.bin/parallelshell \"./node_modules/.bin/browser-sync start -s dist -f dist/**/*\" \"npm run watch\"",
    "clean": "sh utilities.sh -c"
  }
}
